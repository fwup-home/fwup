# Create the firmware file, then "burn it"
$FWUP_CREATE -c -f $CONFIG -o $FWFILE
$FWUP_APPLY -a -d $IMGFILE -i $FWFILE -t complete --quiet

# The firmware file is equivalent to the following dd call
dd if=$IMGFILE of=$WORK/actual-env.img skip=25165824 count=16 2>/dev/null
cmp $WORK/expected-env.img $WORK/actual-env.img

# Check that the verify logic works on this file
$FWUP_VERIFY -V -i $FWFILE
