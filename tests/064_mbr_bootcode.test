# Adapt file paths passed to fwup on Windows
# This assumes we're running under Wine, which maps Z:\ to Linux's /
# Double the backslashes so they'll still be escaped in the generated config file.
BOOTSTRAP_PATH=$WORK/bootstrap-data
if [ -n "$EXEEXT" ]; then
  BOOTSTRAP_PATH=Z:$(echo $BOOTSTRAP_PATH | sed 's/\//\\\\/g')
fi

cat >$CONFIG <<EOF
# Numbers don't matter for the test so long as the MBR is right
define(BOOT_PART_OFFSET, 63)
define(BOOT_PART_COUNT, 77261)

mbr mbr-a {
    bootstrap-code-host-path = "$BOOTSTRAP_PATH"
    partition 0 {
        block-offset = \${BOOT_PART_OFFSET}
        block-count = \${BOOT_PART_COUNT}
        type = 0xc # FAT32
        boot = true
    }
}
task complete {
	on-init {
                mbr_write(mbr-a)
        }
}
EOF

